<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width" />
  <title>loop</title>
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@700&display=swap" rel="stylesheet">
  <link href="/css/profile.css" rel="stylesheet" type="text/css" />
  <link href="/images/icon.png" rel="icon" />
</head>

<body>
  <a class="back" href="/query">
     <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
  </a>
  <div class="upper"></div>
  <div class="profile">
    <img src=<%= "/images/avatars/" + user.avatar + ".png" %>>
  </div>
  <div class="container">
        <div class="nav">
             <i class="fa fa-question-circle icons active" aria-hidden="true"></i>
             <i class="fa fa-pencil-square-o icons" aria-hidden="true"></i>
             <i class="fa fa-user-circle-o icons" aria-hidden="true"></i>
        </div>
        <div class="content">
          <div class="queries display">
               <% for(var i = 0; i < queries.length; i++) { %>
                  <div> <%= queries[i].que %> </div>
               <% } %>
          </div>
          <div class="answers"></div>
          <div class="user"></div>
        </div>
  </div>
  <div class="query">
       <i class="fa fa-times-circle" aria-hidden="true"></i>
  </div>
  <script type="text/javascript">
          var btns = document.querySelectorAll(".nav i");
          btns.forEach(function(btn){
               btn.addEventListener("click", function(evt){
                   btns.forEach(function(bt){
                        bt.classList.remove("active");
                   });
                   evt.target.classList.add("active");
               });
          });
  </script>
</body>

</html>
